<style>
.ptzcamp-schedule .column {
  width: 22%;
  display: inline-block;
  margin-right:10px;
  vertical-align: top;
}

@media screen {
  .schedule_day.active {
    background-color: lightgreen;
    padding: 5px;
  }
  span.badge-success {
    background-color: #5cb85c;
  }
  span.badge a {
    color: white;
  }

  span.badge a:hover {
    color: black;
  }
}
</style>

<div class="ptzcamp-schedule">
  <% @day_schedules.each_with_index do |day, i| %>
    <% if i % 3 == 0 %>
      <div class="column">
    <% end %>

      <div class="panel schedule_day <%= day.current? ? 'active' : '' %>">
        <b>
          <%= day.title %>
        </b>
        <%== simple_format(day.content) %>
      </div>

    <% if (i + 1) % 3 == 0 %>
    </div>
    <% end %>
  <% end %>
</div>
